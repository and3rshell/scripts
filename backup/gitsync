#!/usr/bin/env bash

if [ "$1" == "push" ]; then
    cd "$HOME/.local/scripts" || exit 1
    git add .
    git commit -m "sync"
    git push

    cd "$HOME/.local/work" || exit 1
    git add .
    git commit -m "sync"
    git push

    cd "$HOME/.local/web" || exit 1
    git add .
    git commit -m "sync"
    git push

    cd "$HOME/.config/nvim" || exit 1
    git add .
    git commit -m "sync"
    git push
elif [ "$1" == "pull" ]; then
    cd "$HOME/.local/scripts" || exit 1
    git pull

    cd "$HOME/.local/work" || exit 1
    git pull

    cd "$HOME/.local/web" || exit 1
    git pull

    cd "$HOME/.config/nvim" || exit 1
    git pull
fi
