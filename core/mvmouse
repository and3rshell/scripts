#!/usr/bin/env bash


center_x=960
center_y=540
radius=200
steps=100

delay=0.01

while true; do
    for ((i=0; i<steps; i++)); do
      # calculate angle = i * (2Ï€ / steps)
      # then compute new X,Y using cos/sin, truncate to integer
      read x y <<< $(awk -v i="$i" -v cx="$center_x" -v cy="$center_y" -v r="$radius" -v steps="$steps" \
        'BEGIN {
           pi = atan2(0, -1)
           angle = i * (2 * pi / steps)
           x = cx + r * cos(angle)
           y = cy + r * sin(angle)
           printf "%d %d", x, y
        }'
      )

      # move mouse to (x, y)
      xdotool mousemove --sync "$x" "$y"

      # tiny sleep so you can actually see it moving
      sleep "$delay"
    done
done
